{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "lib": ["ES2022", "DOM"],
    "types": ["jest"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "*.config.ts"],
  "exclude": ["node_modules", "dist"]
}
