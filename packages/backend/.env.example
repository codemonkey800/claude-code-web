# Backend Server Configuration
# The environment the application is running in (development, production, test)
NODE_ENV=development

# The port the backend server will listen on
PORT=8081

# Frontend Configuration
# The URL of the frontend application (used for CORS configuration)
FRONTEND_URL=http://localhost:8080

# Logging Configuration (optional)
# The logging level for the application (log, error, warn, debug, verbose)
LOG_LEVEL=debug

# File System Configuration
# The base directory that users are allowed to browse (default: user home directory)
FS_ALLOWED_BASE_DIR=~

# Default number of items per page when browsing directories
FS_DEFAULT_PAGE_SIZE=100

# Maximum number of items per page when browsing directories
FS_MAX_PAGE_SIZE=500

# Whether to show hidden files by default (files starting with .)
FS_SHOW_HIDDEN_FILES=true
